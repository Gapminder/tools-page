  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Italic.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Medium'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Medium.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Black'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-SemiBold.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Light'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Regular.ttf') format('truetype')

@font-face
  font-family: 'Courier Prime';
  src: url($fonts_dir + 'courierprime/courier-prime-sans.eot?#iefix') format('embedded-opentype'),
