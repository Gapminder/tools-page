@import 'fonts.ext.styl'

$fonts_dir := "/assets/fonts/";

@font-face  
  font-family: 'Work Sans Medium Italic'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Italic.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Ligh Italic'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Italic.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Regular'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Regular.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Regular Italic'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-Italic.ttf') format('truetype')

@font-face  
  font-family: 'Work Sans Bold'
  font-weight: normal;
  font-style: normal;
  src: url($fonts_dir + 'worksans/WorkSans-SemiBold.ttf') format('truetype')

@font-face  
