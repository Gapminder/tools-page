  font-style: normal;

@font-face
  font-family: 'Courier Prime Bold';
  src: url($fonts_dir + 'courierprime/courier-prime-sans-bold.eot?#iefix') format('embedded-opentype'),
    url($fonts_dir + 'courierprime/courier-prime-sans-bold.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
