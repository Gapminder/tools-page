$color-primary := #FFCA34;
$color-grey := #999999;
$color-grey-medium := #b2b2b2;
$color-grey-light := #ECEBE9;
$color-black := #222222;
$color-blue-dark := #607889;
$color-blue-darker := #425663;


$body-min-width := 250px;
$header-height := 50px;

$small-screen := 785px;
$large-screen := 1025px;

$size-column := 230px;

// fonts;
// --------------------------------------------------

$font-family-sans-fallback := "Helvetica Neue", Helvetica, Arial, sans-serif;
$bariol-thin-font-family := "Bariol Thin", $font-family-sans-fallback;
$bariol-thin-italic-font-family := "Bariol Thin Italic", $font-family-sans-fallback;
$bariol-light-font-family := "Bariol Light", $font-family-sans-fallback;
$bariol-light-italic-font-family := "Bariol Light Italic", $font-family-sans-fallback;
$bariol-regular-font-family := "Bariol Regular", $font-family-sans-fallback;
$bariol-regular-italic-font-family := "Bariol Regular Italic", $font-family-sans-fallback;
$bariol-bold-font-family := "Bariol Bold", $font-family-sans-fallback;
$bariol-bold-italic-font-family := "Bariol Bold Italic", $font-family-sans-fallback;
$courier-prime-font-family := "Courier Prime", $font-family-sans-fallback;
$courier-prime-bold-font-family := "Courier Prime Bold", $font-family-sans-fallback;


// Navbar
// --------------------------------------------------

$grid-columns := 12 !default;
$grid-gutter-width := 0px !default;

$navbar-height := 34px;
$navbar-height-mobile := 50px;
$navbar-height-tablet-portrait := 128px;

$navbar-border-radius := 0;
$navbar-border-size := 2px;
$navbar-border-color := $color-primary;

$navbar-default-bg := white;
$navbar-default-border := $color-grey-light;
$navbar-default-link-color := $color-black;
$brand-primary := $color-primary;


$font-size-header-regular := 16px;
$font-size-header-small := 13px;
