
.too-language-button
  .lang-wrapper
    display inline-block
    margin 0
    position relative
    get-font-size(small)
    .too-mobile-menu &
      get-font-size(large)
    padding 2px 6px 2px 0.6em
    border 1px solid $color-primary 
    border-radius 4px
    cursor pointer
    .lang-current
      display block
      padding-right 1.5em
      opacity 1
      text-transform capitalize
      &:after
        content '\25BC'
        padding 0 0 0 4px
        border-left 1px solid $color-primary
        color $color-primary 
        position absolute
        right 4px
    ul
      display none
      &.open
        display block
      position absolute
      list-style none
      z-index 300
      left -1px
      border 1px solid $color-primary
      border-bottom-left-radius: 4px
      border-bottom-right-radius: 4px
      top 19px
      margin 0
      border-top none
      background $color-background
      padding 8px 0 2px 0
      width calc(100% + 2px)
      li
        cursor pointer
        text-transform capitalize
        padding 4px 8px
        border-bottom 1px dotted $color-primary
        margin 0 4px
        &:hover
          text-decoration: underline
        &:last-child
          border-bottom none
      

