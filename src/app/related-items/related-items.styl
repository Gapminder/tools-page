@import './../_resources/variables.styl'
@import './../_resources/mixins.styl'

.app-related-items
  get-global-margin-left()
  get-global-margin-right()
  display flex
  flex-wrap: wrap-reverse
  margin-top: 30px
  margin-bottom: 30px
  gap 30px
  align-items flex-end

.related-block
  flex: 2

.video-block
  flex: 1
  margin-top: 0.7em
  min-width: 300px
  max-height: 342px
  max-width: 608px
  aspect-ratio 16/9
  position: relative
  display: flex
  align-items: center
  background-color: #333
  img
    width: 100%
    aspect-ratio 16/9
    cursor: pointer

.related-heading
  font-size: 2em
  color $color-footer-text
  margin-bottom: 0.7em

.related-container
  margin 0
  padding 0
  +for_breakpoint(small)
    padding 20px 10px 20px 0

.related-items
  list-style none
  margin 0
  padding 0
  box-sizing(border-box)
  +for_breakpoint(xlarge)
    columns(2 20px)

.related-item
  box-sizing(border-box)
  display inline-block
  width 100%
  padding 0
  margin-bottom 20px

  +for_breakpoint(small)
    padding 0px
    margin-bottom 10px

  a
    //display(flex)
    flex-direction(row)
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    text-decoration none
    color $color-black

    &:hover .title
      color $color-blue-dark
      text-decoration underline

  a.newtab span.title::after
    new-tab()

.related-item-thumbnail
  -webkit-flex-shrink 0
  -moz-flex-shrink 0
  -ms-flex-negative 0
  flex-shrink 0
  width 160px
  height auto

  +for_breakpoint(medium)
    width 130px
    
  +for_breakpoint(small)
    width 100px

  img
    width 100%
    height auto
    border 1px solid $color-grey-light
    border-radius (3px)
    box-shadow 0 1px 20px rgba(0, 0, 0, 0.03), 0 1px 10px rgba(0, 0, 0, 0.12)

.related-item-info
  display inline-block
  flex 1
  line-height 1.2
  padding-right 15px
  position relative
  margin-left 20px

  .title, .subtitle
    display block

  .title
    margin-bottom: 5px
    font-family $theme-font-light
    get-font-size(large)

  .subtitle
    get-font-size(medium)
    font-style italic
    color #808080
