.sl-overlay
  display flex
  greyout()

  .sl-dialog
    dialog-box()
    width 520px
    max-width 95%
    padding 16px
    get-font-size(small)

    .sl-close
      closecross()

    .sl-title
      margin-bottom 8px
      get-font-size(large)

    .sl-column
      margin 10px 0
      display flex
      flex-direction column

    .sl-row
      display flex
      align-items center
      gap 8px
      margin-bottom 12px
      

    .sl-base
      max-width 60%
      word-wrap break-word

    .sl-private-ds
      display flex
      flex-direction column
      span
        margin-top 2px
        label
          margin-left 5px

    .sl-slug-wrapper
      flex 1

    .sl-slug
      width 100%
      padding 6px 8px
      border 1px solid #ccc
      border-radius 4px

    .sl-availability
      height 0

    .sl-availability.ok
      color #008800

    .sl-availability.busy
      color #b80000

    .sl-label
      margin-bottom 6px

    .sl-select
      margin-left auto
      width 200px
      padding 6px
      border 1px solid #ccc
      border-radius 4px

    .sl-actions
      display flex
      gap 12px
      margin-top 14px
      justify-content center

    .sl-btn
      button()
      get-font-size(large)
