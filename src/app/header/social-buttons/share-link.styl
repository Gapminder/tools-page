.sl-overlay
  position fixed
  inset 0
  background rgba(0,0,0,0.35)
  display flex
  align-items center
  justify-content center
  z-index 10000
  color #333

  .sl-dialog
    background #fff
    border 2px solid #999
    width 520px
    max-width 95%
    padding 16px
    box-sizing border-box
    border-radius 4px
    font-family Arial, sans-serif

    .sl-title
      font-weight 700
      margin-bottom 8px

    .sl-column
      margin 10px 0
      display flex
      flex-direction column

    .sl-row
      display flex
      align-items center
      gap 8px
      margin-bottom 8px

    .sl-base
      max-width 60%
      word-wrap break-word

    .sl-slug-wrapper
      flex 1

    .sl-slug
      width 100%
      padding 6px 8px
      border 1px solid #ccc
      border-radius 4px
      box-sizing border-box

    .sl-availability
      font-size 12px
      height 0

    .sl-availability.ok
      color #008800

    .sl-availability.busy
      color #b80000

    .sl-label
      font-size 13px
      margin-bottom 6px

    .sl-select
      margin-left auto
      width 200px
      padding 6px
      border 1px solid #ccc
      border-radius 4px

    .sl-actions
      display flex
      gap 12px
      margin-top 14px

    .sl-btn
      padding 8px 18px
      border-radius 4px
      border 1px solid #999
      cursor pointer
      font-weight 600
      background #fff

    .sl-btn.sl-cancel
      background #f7cfcf
      border-color #d88

    .sl-btn.sl-save
      background #cff7d0
      border-color #6c9
      flex 1